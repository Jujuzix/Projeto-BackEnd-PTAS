generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id       Int    @id @default(autoincrement())
  nome     String
  email    String @unique
  password String
  tipo     String
}

model usuarioAdm {
  id       Int    @id @default(autoincrement())
  nome     String
  email    String @unique
  password String
  tipo     String
}

model reservaMesas {
  id           Int      @id @default(autoincrement())
  nome_reserva String
  data_reserva DateTime
  n_pessoas    Int
  tipo         String
}

model criaMesa {
  id        Int    @id @default(autoincrement())
  codigo    String @unique
  n_pessoas Int
  tipo      String
}
