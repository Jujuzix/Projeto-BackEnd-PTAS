generator client {
  provider = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id       Int    @id @default(autoincrement())
  nome     String
  email    String @unique
  password String
  tipo     String
  reservas Reserva[]
}

model Reserva {
  id           Int      @id @default(autoincrement())
  usuario_id   Int
  n_mesa      Int
  data_reserva DateTime
  n_pessoas    Int
  status       Boolean
  usuario      Usuario @relation(fields: [usuario_id], references: [id])
  mesa         Mesa    @relation(fields: [n_mesa], references: [id])
}

model Mesa {
  id        Int      @id @default(autoincrement())
  n_mesa    Int      @unique
  n_pessoas Int
  tipo      String   
  reservas  Reserva[]
}

